<resources>
    <style name="AppTheme.NoActionBarWithStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlActivated">@color/colorDivider</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorLightPrimary</item>
        <item name="android:foreground">@drawable/selectable_effect</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorTextPrimary</item>
        <item name="colorControlActivated">@color/colorDivider</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>
</resources>
