<resources>
    <style name="AppTheme.NoActionBarWithStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/color_text</item>
        <item name="colorControlActivated">@color/color_divider</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/color_text_primary</item>
        <item name="colorControlActivated">@color/color_divider</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:colorButtonNormal">@color/color_primary</item>
    </style>
</resources>
