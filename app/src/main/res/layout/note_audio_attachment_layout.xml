<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_circle_filled_blue_48dp"
        android:id="@+id/attachment_audio_play_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/attachment_audio_song"
        android:layout_alignBottom="@+id/attachment_audio_play_button"
        android:layout_toEndOf="@+id/attachment_audio_play_button"
        android:textColor="@color/color_text_secondary"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attachment_audio_group"
        android:layout_alignTop="@+id/attachment_audio_play_button"
        android:layout_alignStart="@+id/attachment_audio_song"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textColor="@color/color_text_primary"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attachment_audio_duration"
        android:layout_above="@+id/attachment_audio_song"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_text_secondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="10dp" />
</RelativeLayout>